<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MassOrderItems">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBreakfast"
                android:text="BREAKFAST"
                android:layout_marginLeft="30dp"
                    />

            <Spinner
                android:id="@+id/spinnerBreakfast"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"

                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etBreakfast"
                android:hint="Breakfast Amount"

                android:inputType="number"
                android:layout_marginLeft="140dp"
                android:singleLine="true"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLunch"
                android:text="LUNCH"
                android:layout_marginLeft="30dp"
                />

            <Spinner
                android:id="@+id/spinnerLunch"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"


                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <EditText
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etLunch"
                android:layout_marginLeft="140dp"

                android:hint="Lunch Amount"

                android:inputType="number"

                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <TextView
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSnacks"
                android:text="SNACKS"
                android:layout_marginLeft="30dp"
                />

            <Spinner
                android:id="@+id/spinnerSnacks"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
            style="@style/normaltext"
            android:id="@+id/etSnacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Snacks Amount"

            android:inputType="number"
            android:layout_marginLeft="140dp"

            android:singleLine="true"
            />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">


            <TextView
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/tvDinner"
                android:text="DINNER" />



            <Spinner
                android:id="@+id/spinnerDinner"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"

                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">




            <EditText
                style="@style/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etDinner"

                android:hint="Dinner Amount"
                android:inputType="number"
                android:layout_marginLeft="140dp"

                android:singleLine="true"
                />


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
    <Button
        style="@style/normaltext"
        android:textColor="@color/white"
        android:id="@+id/btnAddItems"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:background="@drawable/buttonstyle"
        android:text="ADD ITEMS"
       />
    </LinearLayout>

    </LinearLayout>
</ScrollView>