<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/orderitem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingBottom="200dp"
            android:text="Loading..."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/orderitem2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_delete" />

        <TextView
            android:id="@+id/orderitem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="35dp"
            android:paddingBottom="0dp"
            android:text="Loading..."
            android:textColor="@android:color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@id/orderitem3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_delete"
            app:layout_constraintTop_toBottomOf="@id/orderitem1" />

        <TextView
            android:id="@+id/orderitem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="35dp"
            android:text="Loading..."
            android:textColor="@android:color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_delete" />

        <TextView
            android:id="@+id/orderitem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="72dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:text="Loading..."
            android:textColor="@android:color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_delete" />

        <TextView
            android:id="@+id/orderitem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Loading..."
            android:textColor="@android:color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_delete" />


        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="37dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.092" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>